            <div class="col-md-10">
                <input type="file" id="Image3" name="hinh_anh" />
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Prices, "ID_Price", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_Price", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_Price, "", new { @class = "text-danger" })
            </div>
